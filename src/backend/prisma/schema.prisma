generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Plane {
  id             Int             @id @default(autoincrement())
  icao24         String          @unique
  callsign       String?
  origin_country String
  position_source Int

  droneDepartures DroneDeparture[]
}

model DroneDeparture {
  id        Int        @id @default(autoincrement())
  uuid      String   @unique
  latitude  Float
  longitude Float
  radius    Float
  speed     Float

  planeId   Int
  plane     Plane       @relation(fields: [planeId], references: [id])
}